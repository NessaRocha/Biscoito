<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Biscoito.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Image
                x:Name="imgCookie"
                Source="coockie.png"
                SemanticProperties.Description="Biscoito Coockie Inteiro"
                HeightRequest="200"
                HorizontalOptions="Center" 
                Margin="10"/>


            <Button
                x:Name="BtnComer"
                Text="Comer o Biscoito"
                SemanticProperties.Hint="Troca o biscoito inteiro por um mordido"
                MaximumWidthRequest="400"
                Margin="10"
                Clicked="OnBtnComerClicked"
                />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
